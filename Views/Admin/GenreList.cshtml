@model IEnumerable<Genre>
<div class="btn-toolbar justify-content-between" role="toolbar" aria-label="Toolbar with button groups">
  <div class="btn-group" role="group" aria-label="First group">
        <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-danger">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M6 12.5a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v2a.5.5 0 0 1-1 0v-2A1.5 1.5 0 0 1 6.5 2h8A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-8A1.5 1.5 0 0 1 5 12.5v-2a.5.5 0 0 1 1 0v2z" />
            <path fill-rule="evenodd" d="M.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L1.707 7.5H10.5a.5.5 0 0 1 0 1H1.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3z" />
        </svg>  Back 
        </a> 
  </div>
  <div class="input-group">
    <div id="btnGroupAddon2"></div>
   <form method="get" asp-controller="Admin" asp-action="GenreList">
        <input type="Search" placeholder="Enter Search" name="searchString" style="width: 500px;"/>
        <input type="submit" value="Search" class="btn btn-primary"/>
    </form>
  </div>
</div>


<h1 class="display-2 text-center">List of Genres</h1>

<table class="table">
    <thead>
    <th scope="col">ID</th>
    <th scope="col">Description</th>
    <th scope="col">Status</th>
    <th scope="col">Action</th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Description</td>
                @if ((int)item.Status == 1)
                {
                    <td class="text-primary text-uppercase font-weight-bold">@item.Status</td>
                }
                else @if ((int)item.Status == 0)
                {
                    <td class="text-success text-uppercase font-weight-bold">@item.Status</td>
                }
                else
                {
                    <td class="text-danger text-uppercase font-weight-bold">@item.Status</td>
                }
                <td>
                    <a asp-controller="Admin"
                    asp-action="DeleteGenre" class="btn btn-warning" asp-route-id=@item.Id>Delete</a>
                   <a asp-controller="Admin"
                   asp-action="UpdateGenre" class="btn btn-success" asp-route-id=@item.Id>Update</a>
                </td>

            </tr>
        }
    </tbody>
</table>
