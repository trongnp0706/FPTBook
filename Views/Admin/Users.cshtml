@using FPTBook.ViewModels
@model List<FPTBook.ViewModels.UserRolesViewModel>
<div class="btn-toolbar justify-content-between" role="toolbar" aria-label="Toolbar with button groups">
  <div class="btn-group" role="group" aria-label="First group">
        <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-danger">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M6 12.5a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v2a.5.5 0 0 1-1 0v-2A1.5 1.5 0 0 1 6.5 2h8A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-8A1.5 1.5 0 0 1 5 12.5v-2a.5.5 0 0 1 1 0v2z" />
            <path fill-rule="evenodd" d="M.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L1.707 7.5H10.5a.5.5 0 0 1 0 1H1.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3z" />
        </svg>  Back
        </a> 
  </div>
  <div class="btn-group" role="group" aria-label="First group">
        <a asp-controller="Admin" asp-action="Customers" class="btn btn-outline-primary">
         Manage Customers
        </a> 
        <a asp-controller="Admin" asp-action="StoreOwners" class="btn btn-outline-info">
        Manage Store Owner
        </a>
  </div>
  <div class="input-group">
    <div id="btnGroupAddon2"></div>
    <form method="get" asp-controller="Admin" asp-action="Users">
        <input type="Search" placeholder="Enter Search" name="searchString" style="width: 500px;"/>
        <input type="submit" value="Search" class="btn btn-primary"/>
    </form>
  </div>
</div>

<h1 class="display-1 text-center">All Accounts</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Customer's Email</th>
            <th scope="col">Customer's Full Name</th>
            <th scope="col">Customer's Address</th>
            <th scope="col">Role's</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Email</td>
                <td>@item.FullName</td>
                <td>@item.Address</td>
                <td>@string.Join("", item.Roles.ToList())</td>
                <td>
                    <a asp-action="ChangePassword" asp-controller="Admin" asp-route-id="@item.Id" class="btn btn-danger">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                    <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                    <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                    </svg>
                    Change Password</a>
                </td>
            </tr>
        }
    </tbody>
</table>