@using FPTBook.ViewModels
@model ApplicationUser

<div class="btn-toolbar justify-content-between" role="toolbar" aria-label="Toolbar with button groups">
  <div class="btn-group" role="group" aria-label="First group">
        <a asp-controller="Admin" asp-action="Users" class="btn btn-outline-info">
        Manage Users
        </a>
        <a asp-controller="Admin" asp-action="Customers" class="btn btn-outline-primary">
         Manage Customers
        </a> 
        <a asp-controller="Admin" asp-action="StoreOwners" class="btn btn-outline-info">
        Manage Store Owner
        </a>
  </div>
</div>

@* <form method="post" asp-controller="Admin" asp-action="ChangePassword"> *@
    <div class="row p-3 border bg-white">
        <div class="col-12 border-bottom">
            <h2 class="display-2">Reset Password</h2>
        </div>
        @* <partial name="_StatusMessage" model="Admin.StatusMessage" /> *@
        @if (TempData["AlertMessage"]!=null)
        {
            <div class="alert alert-success">
                <strong>Success</strong> @TempData["AlertMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <form method="post" asp-controller="Admin" asp-action="ChangePassword">
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4"><label asp-for="Id">Account ID</label></div>
                <div class="col-8"><input asp-for="Id" class="form-control" disabled /></div>
            </div>
            <div class="form-group row">
                <div class="col-4"><label asp-for="Email">Email</label></div>
                <div class="col-8"><input asp-for="Email" class="form-control" disabled /></div>
            </div>
            <div class="form-group row">
                <div class="col-4"><label for="password">New Password</label></div>
                <div class="col-8"><input type="password" name="password" class="form-control" /></div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-danger form-control">Reset Password</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </form>
    </div>